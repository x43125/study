<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="beanPostProcessor" class="com.wx.springsourcestudy.blog.simulate1.postprocessor.MyBeanPostProcessor">
    </bean>

    <bean id="instantiationAwareBeanPostProcessor" class="com.wx.springsourcestudy.blog.simulate1.postprocessor.MyInstantiationAwareBeanPostProcessor">
    </bean>

    <bean id="beanFactoryPostProcessor" class="com.wx.springsourcestudy.blog.simulate1.postprocessor.MyBeanFactoryPostProcessor">
    </bean>

    <bean id="person" class="com.wx.springsourcestudy.blog.simulate1.bean.Person" init-method="myInit"
          destroy-method="myDestroy" scope="singleton" p:name="张三" p:address="广州"
          p:phone="1590000000" />

</beans>